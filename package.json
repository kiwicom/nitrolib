{
  "name": "@kiwicom/nitro",
  "version": "8.0.1",
  "description": "Nitro's components.",
  "scripts": {
    "start": "yarn storybook",
    "build": "run-p babel types keyfile",
    "babel": "babel src -d lib --ignore '**/__tests__/*'",
    "modules": "cross-env BABEL_ENV=modules babel src -d lib --ignore '**/__tests__/*' && renamer --find .js --replace .mjs 'lib/**'",
    "types": "copyfiles -u 1 'src/**/*.js.flow' lib",
    "keyfile": "node etc/collectKeys.js",
    "docs": "node etc/docs",
    "docs:check": "node etc/docs/check.js",
    "relay": "relay-compiler --src src/ --schema schema.graphql --extensions jsx js",
    "relay:check": "yarn relay --validate",
    "relay:schema": "graphql get-schema",
    "test": "jest",
    "lint": "eslint './**/*.{js,jsx,js.flow}'",
    "lint:css": "stylelint './src/**/*.{js,jsx}'",
    "typecheck": "flow check",
    "keys": "node ./bin/nitro.js keys 'src/**/*.{js,jsx}'",
    "keys-check": "yarn keys && yarn fetch && yarn translations && node ./bin/nitro.js keys-check",
    "translations": "node ./bin/nitro.js translations",
    "fetch": "node ./bin/nitro.js fetch",
    "fixtures": "yarn keys && yarn fetch && yarn translations && node ./etc/fetchFixtures.js",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o dist-storybook",
    "prepare": "rimraf lib && run-p test lint lint:css keys-check && yarn build && yarn typecheck",
    "localsync": "rimraf lib && yarn build && yalc push",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "keywords": [
    "react",
    "components"
  ],
  "author": "kiwicom",
  "files": [
    "bin",
    "lib",
    "types",
    ".flowconfig",
    "tkeys.json",
    "README.md"
  ],
  "bin": {
    "nitro": "./bin/nitro.js"
  },
  "dependencies": {
    "@babel/parser": "^7.1.6",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/runtime": "^7.1.5",
    "@babel/traverse": "^7.1.6",
    "@kiwicom/relay": "^3.0.0",
    "babel-loader": "^8.0.4",
    "btoa-lite": "^1.0.0",
    "chalk": "^2.4.1",
    "date-fns": "^2.0.1",
    "decimal.js": "^10.1.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "i18n-extract": "^0.6.3",
    "isomorphic-fetch": "^2.2.1",
    "js-cookie": "^2.2.0",
    "mailcheck": "^1.1.1",
    "normalizr": "^3.3.0",
    "query-string": "^5.1.1",
    "react-transition-group": "^2.5.0",
    "uuid": "^3.3.2",
    "validator": "^10.9.0",
    "yargs": "^12.0.5"
  },
  "peerDependencies": {
    "@kiwicom/orbit-components": "^0.57.0",
    "@kiwicom/translations": "^1.415.0",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/plugin-transform-typescript": "^7.5.5",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@emotion/core": "^10.0.7",
    "@kiwicom/eslint-config-nitro": "^2.0.0",
    "@kiwicom/orbit-components": "^0.57.0",
    "@kiwicom/translations": "^1.415.0",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-info": "^5.1.9",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/components": "^5.1.9",
    "@storybook/core-events": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-id": "^1.0.1",
    "babel-plugin-idx": "^2.4.0",
    "babel-plugin-ramda": "^1.6.3",
    "babel-plugin-relay": "^5.0.0",
    "babel-plugin-styled-components": "^1.9.4",
    "babel-preset-airbnb": "^3.0.1",
    "conventional-changelog-cli": "^2.0.21",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "fetch-mock": "^7.3.0",
    "flow-bin": "^0.102.0",
    "graphql": "^14.1.1",
    "graphql-cli": "^3.0.9",
    "husky": "^2.3.0",
    "jest": "^23.6.0",
    "jest-date-mock": "^1.0.7",
    "jest-styled-components": "^6.3.1",
    "loki": "^0.15.0",
    "moment": "^2.22.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.2",
    "raf": "^3.4.1",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "relay-test-utils": "^5.0.0",
    "renamer": "^1.1.0",
    "rimraf": "^2.6.2",
    "styled-components": "^4.2.0",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-custom-processor-loader": "^0.6.0",
    "stylelint-processor-styled-components": "^1.5.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn docs:check"
    }
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      },
      "chrome.iphone7": {
        "target": "chrome.app",
        "preset": "iPhone 7"
      }
    }
  }
}
