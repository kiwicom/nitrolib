[strict]
unsafe-getters-setters
untyped-import
untyped-type-import

[lints]
all=error
# Due to Relay
nonstrict-import=off
unclear-type=off
sketchy-null=off

[ignore]
# <PROJECT_ROOT>/lib/.* - not ignored intentionally, makes sure libdefs make sense

[libs]
types/

[options]
emoji=true

# This option lets you alias 'any' with a given string
suppress_type=$FlowFixMe

suppress_comment=\\(.\\|\n\\)*\\$FlowIssue: https://github.com/facebook/flow/issues/[0-9]+
suppress_comment=\\(.\\|\n\\)*\\$FlowExpected: .+

esproposal.optional_chaining=enable
