// @flow strict
import { LangInfo } from "./LangInfo";
import { Translations, Translate } from "../services/intl/translate";

export type IntlRaw = {|
  language: LangInfo,
  translations: Translations,
|};

export type Intl = {|
  ...IntlRaw,
  translate: Translate,
  getLocale: Promise<$FlowFixMe>, // Resolves 'date-fns' locale
|};

export type IntlsRaw = { [key: string]: IntlRaw };
export type Intls = { [key: string]: Intl };

declare export var intlDefault: Intl;
